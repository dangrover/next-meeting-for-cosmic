  <content_rating type="oars-1.1" />

  <launchable type="desktop-id">com.dangrover.next-meeting-app.desktop</launchable>

  <provides>
    <id>com.system76.CosmicApplet</id>
    <binary>cosmic-next-meeting</binary>
  </provides>

  <categories>
    <category>Utility</category>
  </categories>

  <keywords>
    <keyword>meeting</keyword>
    <keyword>calendar</keyword>
    <keyword>schedule</keyword>
    <keyword>panel</keyword>
    <keyword>applet</keyword>
  </keywords>

  <releases>
    <release version="0.9.0" date="2026-01-07">
      <description>
        <p>Initial release with core features:</p>
        <ul>
          <li>Display next meeting in panel with title, time, and location</li>
          <li>One-click join for video calls (Google Meet, Zoom, Teams, Webex)</li>
          <li>Calendar color indicators</li>
          <li>Flexible time display (absolute or relative)</li>
          <li>Filter by calendar, all-day events, or acceptance status</li>
        </ul>
      </description>
    </release>
  </releases>

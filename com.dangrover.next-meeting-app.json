{
    "id": "com.dangrover.next-meeting-app",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "cosmic-next-meeting",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.gnome.evolution.dataserver.Calendar8",
        "--talk-name=org.gnome.evolution.dataserver.Sources5",
        "--talk-name=org.gnome.OnlineAccounts",
        "--filesystem=xdg-config/cosmic:ro",
        "--filesystem=xdg-config/evolution:ro"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/cosmic-next-meeting/cargo",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "cosmic-next-meeting",
            "buildsystem": "simple",
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -Dm755 target/release/cosmic-next-meeting /app/bin/cosmic-next-meeting",
                "install -Dm644 resources/app.desktop /app/share/applications/com.dangrover.next-meeting-app.desktop",
                "install -Dm644 resources/app.metainfo.xml /app/share/metainfo/com.dangrover.next-meeting-app.metainfo.xml",
                "install -Dm644 resources/icon.svg /app/share/icons/hicolor/scalable/apps/com.dangrover.next-meeting-app.svg",
                "install -Dm644 resources/icon-symbolic.svg /app/share/icons/hicolor/symbolic/apps/com.dangrover.next-meeting-app-symbolic.svg"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                },
                "cargo-sources.json"
            ]
        }
    ]
}
